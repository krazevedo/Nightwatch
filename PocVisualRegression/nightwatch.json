{
    "src_folders" : ["tests"],
    "output_folder" : "reports",
    "custom_commands_path" : "",
    "custom_assertions_path" : "./assertions",
    "page_objects_path" : "",
    "globals_path" : "./globals.js",
  
    "selenium" : {
      "start_process" : true,
      "server_path" : "lib/drivers/selenium-server-standalone-2.45.0.jar",
      "log_path" : "",
      "port" : 4444,
      "cli_args" : {
        "webdriver.chrome.driver" : "lib/drivers/chromedriver.exe",
        "webdriver.gecko.driver" : "lib/drivers/geckdriver.exe",
        "webdriver.edge.driver" : ""
      }
    },
  
    "test_settings" : {
      "default" : {
        "launch_url" : "http://localhost:5558",
        "selenium_port"  : 4444,
        "selenium_host"  : "localhost",
        "silent": true,
        "screenshots" : {
          "enabled" : true,
          "path" : "reports",
          "on_failure": true,
          "on_error": true
        },
        "desiredCapabilities": {
          "browserName": "firefox",
          "marionette": true
        }
      },
  
      "chrome" : {
        "desiredCapabilities": {
          "browserName": "chrome",
          "chromeOptions" : {
            "args" : ["start-maximized", "window-size=1170,768", "headless"]
          }          
        }
      },
  
      "edge" : {
        "desiredCapabilities": {
          "browserName": "MicrosoftEdge"
        }
      },

      "phantom":{
        "desiredCapabilities": {
          "browserName": "phantomjs",
          "javascriptEnabled": true,
          "acceptSslCerts": true,
          "phantomjs.binary.path": "lib/drivers/phantomjs.exe",
          "phantomjs.cli.args": "--webdriver=5558 --webdriver-selenium-grid-hub=http://localhost:4444"          
        }
      }
    }
  }